{%- for block in section.blocks -%}
    {%- case block.type -%}
    {%- when 'announcement' -%}
        <div class="announcement-bar color-{{ block.settings.color_scheme }} gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
            {%- if block.settings.text != blank -%}
                {%- if block.settings.link_text != blank -%}
                    <a href="{{ block.settings.link_text }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
                {%- endif -%}
                <p class="announcement-bar__message h5">
                    {{ block.settings.text }}
                    {%- if block.settings.link_text != blank -%}
                        {% render 'icon-arrow' %}
                    {%- endif -%}
                </p>
                {%- if block.settings.link_text != blank -%}
                    </a>
                {%- endif -%}
            {%- endif -%}
        </div>
    {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Find me at",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "background-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__2.label"
            }
          ],
          "default": "background-2",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.label"
        },
        {
          "type": "text",
          "id": "link_text",
          "default": "Find me at",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.link_text.label"
        },
        {
          "type": "text",
          "id": "link_url",
          "default": "https://www.linkedin.com/in/balica-nicolae-537b8814a/",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.link_url.label",
          "info": "Please fill in the complete url (protocol, domain, path, etc.)"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
